<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- base application theme. -->
    <style name="Base.Theme.Dinosaurios" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- customize your light theme here. -->
        <item name="colorPrimary">@color/primaryRed</item>
        <item name="colorPrimaryVariant">@color/primaryDarkRed</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- secondary brand color. -->
        <item name="colorSecondary">@color/secondaryRed</item>
        <item name="colorSecondaryVariant">@color/primaryDarkRed</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>

    <style name="Theme.Dinosaurios" parent="Base.Theme.Dinosaurios" />

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primaryRed</item>
        <item name="titleTextAppearance">@style/Widget.App.Toolbar.Title</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="popupTheme">@style/Widget.App.PopupMenu</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Toolbar.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>