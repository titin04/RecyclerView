<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- imagen del dinosaurio -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_dino"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.MediumComponent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@tools:sample/backgrounds/scenic"/>

        <!-- nombre del dinosaurio -->
        <TextView
            android:id="@+id/txtview_dino_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            tools:text="Tyrannosaurus Rex"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintStart_toEndOf="@id/image_dino"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- tipo de dinosaurio -->
        <TextView
            android:id="@+id/txtview_dino_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            tools:text="CarnÃ­voro"
            android:textSize="14sp"
            android:textColor="@color/primaryRed"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@id/image_dino"
            app:layout_constraintTop_toBottomOf="@id/txtview_dino_name" />

        <!-- habitat -->
        <TextView
            android:id="@+id/txtview_dino_habitat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            tools:text="Selva Tropical"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/image_dino"
            app:layout_constraintTop_toBottomOf="@id/txtview_dino_type" />

        <!-- nivel del dinosaurio -->
        <TextView
            android:id="@+id/txtview_dino_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            tools:text="Nivel 45"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/image_dino"
            app:layout_constraintTop_toBottomOf="@id/txtview_dino_habitat" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/btn_edit_dino"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/icon_edit"
                app:tint="@color/primaryRed"
                android:contentDescription="Edit" />

            <ImageView
                android:id="@+id/btn_delete_dino"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/icon_basket"
                app:tint="@color/text_hint"
                android:contentDescription="Delete" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
